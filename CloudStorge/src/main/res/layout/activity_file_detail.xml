<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".FileDetailActivity"
            android:background="#e5e5e5"
            android:longClickable="false"
            >


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/detail_download_label_string"
                android:id="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="11dp"
                android:textColor="#363636"
                android:paddingBottom="5dp"
                android:textSize="14dp"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:background="@android:color/darker_gray"/>

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/detail_download_switch_label_string"
                android:id="@+id/detail_download_switch"
                android:layout_below="@+id/imageView"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignLeft="@+id/imageView"
                android:background="?android:selectableItemBackground"/>

        <RelativeLayout
                android:id="@+id/tenant_share_contain"
                android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_download_switch"
                        android:layout_alignLeft="@+id/file_detail_download_switch">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/detail_share_label_string"
                android:id="@+id/textView3"

                android:layout_marginTop="11dp"
                android:textColor="#363636"
                android:paddingBottom="5dp"
                android:textSize="14dp"
                android:paddingTop="15dp"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView2"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:background="@android:color/darker_gray"
                />

        <Switch
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="@string/detail_share_switch_label_string"
                android:id="@+id/detail_share_switch"
                android:layout_below="@+id/imageView2"
                android:layout_alignLeft="@+id/imageView2"
                android:background="?android:selectableItemBackground"/>

        <LinearLayout
                android:id="@+id/detail_tenant_list"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_share_switch"
                android:layout_marginTop="7dp">
        </LinearLayout>
</RelativeLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/detail_general_label_string"
                android:id="@+id/textView4"
                android:layout_marginTop="21dp"
                android:textColor="#363636"
                android:paddingBottom="5dp"
                android:textSize="14dp"
                android:layout_below="@+id/tenant_share_contain"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView3"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="7dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/detail_last_modified_label_string"
                android:id="@+id/detail_lastmodified_label"
                android:layout_below="@+id/imageView3"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_marginTop="7dp"
                android:textSize="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/detail_lastmodified"
                android:layout_alignTop="@+id/detail_lastmodified_label"
                android:layout_toRightOf="@+id/detail_lastmodified_label"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/detail_size_label_string"
                android:id="@+id/detail_size_label"
                android:layout_below="@+id/detail_lastmodified_label"
                android:layout_alignLeft="@+id/detail_lastmodified_label"
                android:textSize="16dp"
                android:layout_marginTop="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/detail_size"
                android:layout_alignTop="@+id/detail_size_label"
                android:layout_toRightOf="@+id/detail_size_label"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"/>


    </RelativeLayout>
</ScrollView>
